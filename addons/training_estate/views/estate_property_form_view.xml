<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <header>
                    <!-- TODO these part is not functional-->
                        <button name="change_estate_state_sold" type="object" class="btn-primary" string="Sold"/>
                        <button name="change_estate_state_canceled" type="object" class="btn-danger" string="Cancel"/>
<!--                    <button-->
<!--                            name="action_edit_data"-->
<!--                            string="Edit"-->
<!--                            type="object"-->
<!--                            class="oe_highlight"-->
<!--                            data-hotkey="e" title="Edit data"-->
<!--                            attrs="{'invisible': ['|','|', ('active','=',False), ('probability', '=', 100), ('type', '=', 'lead')]}"-->
<!--                    />-->
<!--                    <button name="action_set_won_rainbowman" string="Create"-->
<!--                            type="object" class="oe_highlight" data-hotkey="w" title="Create data"-->
<!--                            attrs="{'invisible': ['|','|', ('active','=',False), ('probability', '=', 100), ('type', '=', 'lead')]}"/>-->
                </header>
                <sheet>
                    <div class="oe_title mb24">
                        <h1>
                            <field name="name"/>
                        </h1>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </div>
                    <group>
                        <group>
                            <field name="estate_state"/>
                            <field name="property_type_id" class="text-info"/>
                            <field name="postcode"/>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                        </group>
                        <group>
                            <field name="date_availability"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page  string="Offers">
                            <field name="offer_ids"/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="user_id" class="text-primary"/>
                                <field name="partner_id" style="color: blue"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>