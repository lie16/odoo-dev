<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_estate_property_search_view" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search estate">
                <field name="property_type_id"/>
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <separator/>
                <filter string="Available" name="state" domain="[('state', 'in', ['new', 'received  '])]"/>
                <filter string="Orientation" name="garden_orientation" domain="[('garden_orientation', 'in', ['south', 'west'])]"/>
                <separator/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="postcode" string="Postcode" domain="[]" context="{'group_by' : 'postcode'}" />
                    <filter name="property_type_id" string="Property Type" domain="[]" context="{'group_by' : 'property_type_id'}" />
                </group>
            </search>
        </field>
    </record>
</odoo>